@{
    var c = ViewBag.email;
}
<br />

<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row justify-content-center mt-5">
        @if(c == ""){
            <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Oh snap!</strong> <a href="#" class="alert-link">Invalid email</a> and try submitting again.
        </div>
        }
        else if (c == ":")
        {
            <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Oh snap!</strong> <a href="#" class="alert-link">Wrong OTP</a> and try submitting again.
        </div>
        }
        else if (c == ";")
        {
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Oh snap!</strong> <a href="#" class="alert-link">Email doesn't exist in server</a> and try submitting again.
            </div>
        }
          <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Reset Password</h3>
      @using (Html.BeginForm())
            {

                                      <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-block" value="Send OTP">
                        </div>
      }
                          </div>
            </div>
        </div>
    </div>
</div>