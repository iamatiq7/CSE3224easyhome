<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-12 col-xl-11">
        <div class="card bg-dark  text-light" style="border-radius: 25px;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <p class="text-center h1 fw-bold text-light mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                        @if (x == "zyx")
                        {
                            <p class="text-center h3 fw-bold text-warning mb-5 mx-1 mx-md-4 mt-4">Empty input is not acceptable...</p>
                        
                        }
                        
                        @using (Html.BeginForm())
                        {
                            <label for="email" class="form-label mt-4">Email address</label>
                            
                            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            <label>
                                @if (x == "xyz")
                                {
                                    <span class="text-warning">Please check your email... this email is in use</span>
                                }
                            </label>
                            <label for="password" class="form-label mt-4">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Password">
                            <label for="gender" class="form-label mt-4">Example select</label>
                            <select class="form-select" name="gender">
                                <option>Male</option>
                                <option>Female</option>

                            </select>
                             

                            <label for="name" class="form-label mt-4">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter your full name">
                            <label for="cell" class="form-label mt-4">Cell</label>
                            <input type="text" class="form-control" name="cell" placeholder="Enter your Mobile number">
                            <label>
                                @if (x == "zyxi2")
                                {
                                    <span class="text-warning">Number is not valid</span>
                                }
                            </label>
                            <label for="address" class="form-label mt-4">address</label>
                            <input type="text" class="form-control" name="address" placeholder="Enter your Address">
                            <br />
                            <label for="start">Birth date</label>

                            <input type="date" name="start"
                                   value="@DateTime.Now"
                                   min="1970-01-01" max="2013-12-31">
                            <br />
                            <label for="propic" class="my-2 form-label mt-4">Photo</label>
                            <input class="form-control" accept="image/png, image/jpeg" type="file" name="propic" id="propic">
                            <br />
                              <label for="vid" class="my-2 form-label mt-4">NID/ID</label>
                            <input class="form-control" accept="image/png, image/jpeg" type="file" name="vid" id="vid">
                            <label>
                                @if (x == "zyxi")
                                {
                                    <span class="text-warning">VID must be attached...</span>
                                }
                            </label>
                              <br />
                            
                           
                            <input type="submit" class="btn btn-primary" />


                        }
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                        <img src="~/Content/images/coverpic/boxed-water-is-better-ivfdGY8C_rw-unsplash.jpg"
                             class="img-fluid" alt="Sample image">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
